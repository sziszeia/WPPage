<div class="container-flex">
<p id=”notice” class=""><span style="color: green"><%= notice %></p></span>
    <%if @cart_items && @cart_items.size != 0%>
        <div class="card justify-content-cener" style="width: 50%; height: 50em; overflow:auto;">
            <% @cart_items.each do |cart_item|%>
                <% product = Product.find_by(id: cart_item.product_id)%>
                <div class="card m-1" style="width: 100%; background-color:#e9e9e9">
                    <div class="card-body">
                        <div class="float-right">
                            <%= link_to 'Remove from cart', cart_item_remove_path(product), :class => "btn btn-small btn-danger", method: :delete %>
                        </div>
                        <p><strong><%=product.name%></strong>
                            <div class="float-right"><strong>£<%=product.price%></strong></div></p>
                        <h6>Description</h6><hr />
                        <p><%=product.description%></p>
                    </div>
                </div>
            <%end%>
        </div>
    <%else%>
        <h2>No products are in your cart at the moment.</h2>
    <%end%>
</div>