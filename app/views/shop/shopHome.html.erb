<div class="container-flex">
    <%if @products && @products.size != 0%>
        <div class="card justify-content-cener" style="width: 50%; height: 50em; overflow:auto;">
            <% @products.each do |product|%>
                <div class="card m-1" style="width: 100%; background-color:#e9e9e9">
                    <div class="card-body">
                        <%if product.isNew%>
                            <div class="card float-right" style="background-color: yellow; width: 4em">NEW</div>
                        <%end%>
                        <%if product.quantity == 0 %>
                            <div class="card float-right" style="background-color: red; width: 6em">Out of stock </div>
                        <% end %>
                        <p><strong><%=product.name%></strong>
                            <div class="float-right"><strong>Â£<%=product.price%></strong></div></p>
                        <h6>Description</h6><hr />
                        <p><%=product.description%></p>
                    </div>
                </div>
            <%end%>
        </div>
    <%else%>
        <h2>Sorry, no products are available at the moment. Please check back later.</h2>
    <%end%>
</div>